{
  "compilerOptions": {
    "target": "es5",                     
    "module": "commonjs",                                       
    "allowJs": true,                                     
    "jsx": "react-jsx",                          
    "sourceMap": true,                        
    "outDir": "./dist",                        
    "removeComments": true,              
    "noEmit": true,                      
    "strict": true,                      
    "noImplicitAny": false,               
    "strictNullChecks": true,            
    "moduleResolution": "node",                               
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,           
    "skipLibCheck": true,        
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}